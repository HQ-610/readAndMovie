.post-container{
  margin-top: 20px;
  margin-bottom: 20px;
  background-color: #fff;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
}
.post-author-data{
  margin: 10rpx 0 20rpx 10rpx;
}
.post-author{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}
.post-date{
  font-size: 26rpx;
  margin-bottom: 5px;
  margin-left: 20rpx;
  vertical-align: middle;
}
.post-title{
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-left: 10rpx;
  margin-bottom: 10px;
}
.post-image{
  width: 100%;
  height: 340rpx;
  margin-bottom: 15rpx;
}
.post-content{
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #666;
  line-height: 40rpx;
  letter-spacing: 2rpx;
}
.post-like{
  display: flex;
  flex-direction: row;
  padding: 5px;
}
.post-like-image{
  width: 16px;
  height: 16px;
  margin-left: 10rpx;
  vertical-align: middle;
}
.post-like-font{
  color: #777;
  font-size: 13px;
  margin-left: 10rpx;
  margin-right:20rpx;
  vertical-align: middle;  
}